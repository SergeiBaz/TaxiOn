<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">
    <argument
        android:name="id"
        app:argType="integer" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="presentation.fragments.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_userChoiceFragment"
            app:destination="@id/userChoiceFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"
            app:enterAnim="@animator/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_pop_exit_anim"
            app:popEnterAnim="@animator/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/userChoiceFragment"
        android:name="presentation.fragments.UserChoiceFragment"
        android:label="fragment_user_choice"
        tools:layout="@layout/fragment_user_choice">
        <action
            android:id="@+id/action_userChoiceFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@animator/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_pop_exit_anim"
            app:popEnterAnim="@animator/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
        <action
            android:id="@+id/action_userChoiceFragment_to_lobbyFragment"
            app:destination="@id/lobbyFragment"
            app:enterAnim="@animator/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_pop_exit_anim"
            app:popEnterAnim="@animator/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
        <action
            android:id="@+id/action_userChoiceFragment_to_yandexMapFragment"
            app:destination="@id/yandexMapFragment"
            app:enterAnim="@animator/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_pop_exit_anim"
            app:popEnterAnim="@animator/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
        <action
            android:id="@+id/action_userChoiceFragment_to_driverMainScreenFragment2"
            app:destination="@id/driverMainScreenFragment2" />
    </fragment>
    <fragment
        android:id="@+id/fragment_create_auction"
        android:name="presentation.fragments.create_auction_fragment.CreateAuctionFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_create_auction" >
        <action
            android:id="@+id/action_fragment_create_auction_to_yandexMapFragment"
            app:destination="@id/yandexMapFragment"
            app:enterAnim="@animator/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_pop_exit_anim"
            app:popEnterAnim="@animator/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="presentation.fragments.login_fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/auctionFragment"
        android:name="presentation.fragments.auction_fragment.AuctionFragment"
        android:label="fragment_auction"
        tools:layout="@layout/fragment_auction">
    <action
        android:id="@+id/add"
        app:destination="@id/auctionFragment">
        <argument
            android:name="id"
            android:defaultValue="0"
            app:argType="integer" />
    </action>
    <action
        android:id="@+id/edit"
        app:destination="@id/auctionFragment">
        <argument
            android:name="id"
            app:argType="integer" />
    </action>
    </fragment>
    <fragment
        android:id="@+id/lobbyFragment"
        android:name="presentation.fragments.lobby_fragment.LobbyFragment"
        android:label="fragment_lobby"
        tools:layout="@layout/fragment_lobby">
        <action
            android:id="@+id/action_lobbyFragment_to_auctionFragment"
            app:destination="@id/auctionFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="presentation.fragments.register_fragment.RegisterFragment"
        android:label="RegisterFragment" />
    <fragment
        android:id="@+id/yandexMapFragment"
        android:name="presentation.fragments.yandexMap_fragment.YandexMapFragment"
        android:label="YandexMapFragment" >
        <action
            android:id="@+id/action_yandexMapFragment_to_userChoiceFragment"
            app:destination="@id/userChoiceFragment" />
    </fragment>
    <fragment
        android:id="@+id/driverMainScreenFragment2"
        android:name="presentation.fragments.mainScreen.DriverMainScreenFragment"
        android:label="DriverMainScreenFragment" />
</navigation>